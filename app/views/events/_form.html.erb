<%= form_for @event do |f|%>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited
          this event from being saved:</h2>
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
      <% end %>

    <table width="100%" cellspacing="0" cellpadding="0" border="0" class="create_evt">
      <tbody>
      <tr>
        <td width="50%">
          <div class="form-group">
            <label for="dlp_id">Event ID DLP</label>
            <%= f.text_field :event_id_dlp, :placeholder => "Event ID e.g. 1234", :class => "form-control", :id => "dlp_id" %>
            <!--<input type="text" placeholder="Event ID e.g. 1234" class="form-control" id="dlp_id">-->
          </div>
        </td>
        <td>
          <div class="form-group">
            <label for="smi_id">Program Name</label>
            <!-- <input id="smi_id" type="text" class="form-control" placeholder="Event ID e.g. 1234"> -->
            <br>
            <%= f.select :event_id_smi, EventsHelper::Programme_name, :id => "program_type",:prompt => 'Select' %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <div class="form-group">
            <label for="rep_name">Rep Name</label>
            <%= f.text_field :rep_name, :placeholder => "Rep Name", :class => "form-control", :id => "rep_name" %>
            <!--<input type="text" placeholder="Rep Name" class="form-control" id="rep_name">-->
          </div>

        </td>
        <td>


          <div class="form-group">
            <label for="speaker_name">Speaker Name</label>
            <%= f.text_field :speaker_name, :placeholder => "Speaker Name", :class => "form-control", :id => "speaker_name" %>
            <!--<input type="text" placeholder="Speaker Name" class="form-control" id="speaker_name">-->
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <table width="100%" cellspacing="0" cellpadding="0" border="0">
            <tbody>
            <tr>
              <td width="50%">
                <div class="form-group">
                  <label for="event_type">Event Type</label><br>
                  <%= f.select :event_type, EventsHelper::Event_type ,:prompt => 'Select' %>
                </div>
              </td>
              <td class="padding-left">
                <div class="form-group">
                  <label for="evt_date">Event Date</label><br>
                  <%= f.text_field :event_date, :placeholder => "Date", :id => "datetimepicker" %>
                  <br>
                </div>
              </td>
            </tr>
            </tbody>
          </table>
        </td>
        <td>
          <div class="form-group">
            <label for="quarter">Quarter</label><br>
            <%= f.select :quarter, EventsHelper::Quarter_arr ,:prompt => 'Select' %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <table width="100%" cellspacing="0" cellpadding="0" border="0">
            <tbody>
            <tr>
              <td width="50%">
                <div class="form-group">
                  <label for="evt_city">Event City</label>
                  <%= f.text_field :event_city, :placeholder => "Event City", :class => "form-control", :id => "evt_city" %>
                  <!--<input type="text" placeholder="Event City" class="form-control" id="evt_city">-->
                </div>
              </td>
              <td class="padding-left">
                <div class="form-group">
                  <label for="us_states">Event State</label><br>
                  <%= f.select :event_state, EventsHelper::Usstates ,:prompt => 'Select' %>
                </div>
              </td>
            </tr>
            </tbody>
          </table>

        </td>
        <td>
          <table width="100%" cellspacing="0" cellpadding="0" border="0">
            <tbody>
            <tr>
              <td width="50%">
                <div class="form-group">
                  <label for="speaker_city">Speaker City</label>
                  <%= f.text_field :speaker_city, :placeholder => "" ,:class=>"form-control", :id=>"speaker_city"%>
                  <!--<input type="text" placeholder="Speaker City" class="form-control" id="speaker_city">-->
                </div>
              </td>
              <td class="padding-left">
                <div class="form-group">
                  <label for="speaker_states">Speaker State</label><br>
                  <%= f.select :speaker_state, EventsHelper::Usstates ,:prompt => 'Select' %>
                </div>
              </td>
            </tr>
            </tbody>
          </table>
        </td>
      </tr>
      <tr>
        <td>
        </td>
        <td>
        </td>
      </tr>
      </tbody>
    </table>


